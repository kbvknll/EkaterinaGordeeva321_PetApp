<Window x:Class="PetApp.Windows.PhotoViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetApp.Windows"
        mc:Ignorable="d"
        Title="PhotoViewerWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Image x:Name="PhotoImage" Stretch="Uniform" Margin="10"/>

        <TextBlock x:Name="DescriptionTextBlock" Grid.Row="1" Margin="10" TextWrapping="Wrap"/>
    </Grid>
</Window>
